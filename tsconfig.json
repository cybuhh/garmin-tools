{
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "files": ["types/garminFitSDK.d.ts", "types/strava.d.ts"],
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2020",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
